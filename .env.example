# Yandex Cloud Configuration
# Copy this file to .env and fill in the values

# Flask settings
SECRET_KEY=your-secret-key-here-change-in-production

# Database settings (Managed PostgreSQL)
DB_HOST=rc1a-xxxxx.db.cloud.yandex.net
DB_PORT=6432
DB_NAME=news_db
DB_USER=news_user
DB_PASSWORD=your-secure-password

# Yandex Object Storage settings
YANDEX_ACCESS_KEY_ID=your-access-key-id
YANDEX_SECRET_ACCESS_KEY=your-secret-access-key
YANDEX_BUCKET_NAME=news-site-storage-bucket
YANDEX_ENDPOINT_URL=https://storage.yandexcloud.net
YANDEX_REGION=ru-central1

# Yandex Message Queue settings (for async image deletion)
YANDEX_SQS_ENDPOINT_URL=https://message-queue.api.cloud.yandex.net
YANDEX_SQS_QUEUE_URL=https://message-queue.api.cloud.yandex.net/b1xxxxxxx/xxxxxxx/news-image-delete-queue

# Static files URL (optional, for production)
STATIC_FILES_URL=https://storage.yandexcloud.net/news-site-storage-bucket